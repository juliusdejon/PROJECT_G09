<div class="login">
    <form method="post" action="/login">
        <h1>Login to your account</h1>
        <hr>
        <label>Email-ID</label><input name="email" type="text" placeholder="Email-Id">
        <label>Password</label><input name="password" type="password" placeholder="Password">
        <button type="submit">Login</button>
        <p>New here <a href="/register">Signup</a> here</p>
        {{#if errorMsg}}
        <br><p style="color: red;">{{errorMsg}}</p>
        {{/if}}
        <p></p>
    </form>
    <div class="right-block">
        <img src="images/register.jpg" alt="register-img">
    </div>
</div>