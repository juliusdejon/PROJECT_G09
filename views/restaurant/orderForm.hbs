<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout Item</title>
    <link rel="stylesheet" href="/orderForm.css" />
    <script src="/js/orderForm.js"></script>
  </head>

  <body>
    <div class="align-container">
      <form action="/create-order" method="POST">
        <div class="item-container">
          <h2>Customer Information</h2>
          <label for="customerName">Customer Name</label>
          <input type="text" name="customerName" />
          <label for="deliveryAddress">Delivery Address</label>
          <textarea name="deliveryAddress"></textarea>
          {{!-- <input type="text" name="orderTotal" id="orderTotal" /> --}}

          <h2>Order Summary</h2>
          {{#each orderItems}}
            <div>
              <p>{{name}}: ${{price}}</p>
            </div>
          {{/each}}
          <h3>Order total</h3>
          <p id="subtotal">Subtotal: ${{subtotal}}</p>
          <p>Delivery Fee: $0.99</p>
          <p id="tax"></p>
          <hr />
          <p>Add a tip</p>
          <div>
            <button class="tip-button" data-tip="0.15">15%</button>
            <button class="tip-button" data-tip="0.18">18%</button>
            <button class="tip-button" data-tip="0.20">20%</button>
            <button class="tip-button" data-tip="0.25">25%</button>
          </div>
          <hr />
          <h2 id="total"></h2>
          <button type="submit" id="place-order-button">Place order</button>
        </div>
      </form>
    </div>
  </body>

</html>